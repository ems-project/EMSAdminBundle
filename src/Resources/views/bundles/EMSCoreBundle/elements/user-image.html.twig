{% trans_default_domain 'EMSCoreBundle' %}
{% if app.user %}
	<img src="{{ asset('bundles/emscore/images/anonymous.gif') }}" data-original="https://www.gravatar.com/avatar/{{ app.user.email|lower|md5 }}?d={{ "https://www.gravatar.com/avatar"|url_encode }}" class="{{ class }} lazy" alt="{{ app.user.displayName }}">
{% else %}
	<img src="{{ asset('bundles/emscore/images/anonymous.gif') }}" class="{{ class }}" alt="Anonymous">
{% endif %}